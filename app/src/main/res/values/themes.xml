<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WIMM" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!--    light mode-->
<!--    Screen background if light mode on-->
    <style name="SCREEN">
        <item name="android:background">#fff</item>
    </style>

<!--    Text background if light mode on-->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>

    <style name="BACKGROUND">
        <item name="android:background">@drawable/back_from</item>
    </style>

<!--    button background if light mode on-->
    <style name="BUTTON">
        <item name="android:background">#4B7A80</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="BACKGROUNDSPENDING">
        <item name="android:background">@drawable/back</item>
    </style>

    <style name="BACKGROUNDHOME">
        <item name="android:background">@drawable/backgroundhome</item>
    </style>

    <style name="BACKGROUNDHOMEIMG">
        <item name="android:src">@drawable/backgroundlight</item>
    </style>

    <style name="EDITTEXT">
        <item name="android:textColor">#1F1F1F</item>
        <item name="android:backgroundTint">#1C1C1C</item>
        <item name="android:textColorHint">#212020</item>
    </style>

    <style name="EDITTEXTEMAIL">
        <item name="android:textColor">#1F1F1F</item>
        <item name="android:backgroundTint">#1C1C1C</item>
        <item name="android:textColorHint">#212020</item>
        <item name="android:drawableRight">@drawable/ic_baseline_email_24_light</item>
    </style>

    <style name="EDITTEXTPASS">
        <item name="android:textColor">#1F1F1F</item>
        <item name="android:backgroundTint">#1C1C1C</item>
        <item name="android:textColorHint">#212020</item>
        <item name="android:drawableRight">@drawable/ic_baseline_password_24_light</item>
    </style>

    <style name="EDITTEXTCHONNGAY">
        <item name="android:textColor">#1F1F1F</item>
        <item name="android:backgroundTint">#1C1C1C</item>
        <item name="android:textColorHint">#212020</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_date_range_24_light</item>
    </style>

</resources>