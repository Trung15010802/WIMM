<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WIMM" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <!--   Dark mode-->
    <!--    Screen background if dark mode on-->
    <style name="SCREEN">
        <item name="android:background">#141414</item>

    </style>

    <style name="BACKGROUND">
        <item name="android:background">@drawable/back_fromn</item>
    </style>

    <!--    Text background if dark mode on-->
    <style name="TEXT">
        <item name="android:textColor">#CACACA</item>

    </style>

    <style name="EDITTEXT">
        <item name="android:textColor">#787878</item>
        <item name="android:backgroundTint">#C6C6C6</item>
        <item name="android:textColorHint">#C2B7B7</item>
    </style>

    <style name="BACKGROUNDSPENDING">
        <item name="android:background">@drawable/backn</item>
    </style>
    <!--    button background if dark mode on-->
    <style name="BUTTON">
        <item name="android:background">#1293A4</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="BACKGROUNDHOMEIMG">
        <item name="android:src">@drawable/backdarkimg</item>
    </style>

    <style name="EDITTEXTEMAIL">
        <item name="android:textColor">#787878</item>
        <item name="android:backgroundTint">#C6C6C6</item>
        <item name="android:textColorHint">#C2B7B7</item>
        <item name="android:drawableRight">@drawable/ic_baseline_email_24_dark</item>
    </style>
    <style name="EDITTEXTPASS">
        <item name="android:textColor">#C5C5C5</item>
        <item name="android:backgroundTint">#C0BDBD</item>
        <item name="android:textColorHint">#A4A4A4</item>
        <item name="android:drawableRight">@drawable/ic_baseline_password_24_dark</item>
    </style>

    <style name="EDITTEXTCHONNGAY">
        <item name="android:textColor">#787878</item>
        <item name="android:backgroundTint">#C6C6C6</item>
        <item name="android:textColorHint">#C2B7B7</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_date_range_24_dark</item>
    </style>
</resources>